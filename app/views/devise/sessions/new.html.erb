<div class="container">
  <h2>Log in</h2>
  <div class="jumbotron", style="max-width:600px">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10", style="max-width:300px">
      <%= f.email_field :email, autofocus: true, :type => "email", :class => "form-control", :id => "inputEmail13", :placeholder => "Email"  %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10", style="max-width:300px">
      <%= f.password_field :password, autocomplete: "off", :type => "password", :class => "form-control", :id => "inputPassword13", :placeholder => "Password"  %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
            <%= f.check_box :remember_me, :type => "check_box"%> Remember me
        </label>
      </div>
    </div>
  </div>
  <% end -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Log in", :type => "submit", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

</div>

<%= render "devise/shared/links" %>

</div>
