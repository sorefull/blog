<div class="container">
  <h2>Sign up</h2>
  <div class="jumbotron", style="max-width:700px">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
<%= devise_error_messages! %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10", style="max-width:300px">
      <%= f.email_field :email, autofocus: true, :type => "email", :class => "form-control", :id => "inputEmail13", :placeholder => "Email"  %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputUsernamel13l3" class="col-sm-2 control-label">Username</label>
    <div class="col-sm-10", style="max-width:300px">
      <%= f.text_field :username, :class => "form-control", :id => "inputUsernamel13", :placeholder => "Username", :required => "true"  %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputAbout13" class="col-sm-2 control-label">About you</label>
    <div class="col-sm-10", style="max-width:300px">
      <%= f.text_area :user_info, :class => "form-control", :id => "inputAbout13", :placeholder => "Write something about you..."  %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10", style="max-width:300px">
      <%= f.password_field :password, autocomplete: "off", :type => "password", :class => "form-control", :id => "inputPassword13", :placeholder => "Password"  %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Confirmation</label>
    <div class="col-sm-10", style="max-width:300px">
      <%= f.password_field :password_confirmation, autocomplete: "off", :type => "password", :class => "form-control", :id => "inputPassword13", :placeholder => "Password"  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign up", :type => "submit", :class => "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
</div>
