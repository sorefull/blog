<div class="container">
  <div class="jumbotron", style="max-width:500px">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html => {:class => "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="col-sm-10", style="max-width:300px">
        <%= f.email_field :email, autofocus: true, :type => "email", :class => "form-control", :id => "inputEmail13", :placeholder => "Email"  %><br>
        <%= f.submit "Send me new password", :type => "submit", :class => "btn btn-default" %>
      </div>
    </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
