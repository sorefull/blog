<div class="container">
  <!-- <div class="jumbotron"> -->
  <% @posts.each do |post| %>
<div class="row">
  <div class="col-sm-7">
    <div class="panel panel-default">
      <div class="panel-heading">
        <b><%= link_to "#{post.user.username.upcase}:", admins_set_user_path(post.user) %></b>
        <br>
        <em><%= link_to "#{post.title}" , admins_set_post_path(post) %> (<%= post.comments.count %>)<br> </em>
        <span class="text-muted"><%= post.created_at.strftime('%b %d, %Y') %></span>
      </div>
      <div class="panel-body">
        <em><%= post.text %></em>
      </div>
    </div>
    <div>
      <%= link_to "Edit", edit_post_path(post),:type => "button", :class => "btn btn-primary" %>
      <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" }, :type => "button", :class => "btn btn-danger" %>
    </div><br>
  </div>
</div>
<% end %>
<!-- </div> -->
</div
